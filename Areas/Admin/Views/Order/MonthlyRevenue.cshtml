@{
    ViewData["Title"] = "Doanh thu theo tháng";
}

@model List<MonthlyRevenueDto>
@using _3.QKA_DACK.Models.OrderModels
<div class="container mt-4">
    <h2 class="text-center mb-4">📊 Doanh thu theo tháng</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Tháng</th>
                        <th>Doanh thu</th>
                        <th>Số đơn hàng</th>
                        <th>Giá trị trung bình</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Month</td>
                            <td class="fw-bold text-success">@item.TotalRevenue.ToString("C")</td>
                            <td>@item.OrderCount</td>
                            <td class="text-info">@item.AvgOrderValue.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>