@model Product
@using Microsoft.AspNetCore.Mvc.Rendering
@using _3.QKA_DACK.Models.ProductModels
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Add Product";
}

<h2 class="text-center text-primary my-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="card shadow-lg p-4">
        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Price" class="form-label fw-bold"></label>
                <input asp-for="Price" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Stock" class="form-label fw-bold"></label>
                <input asp-for="Stock" type="number" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Size" class="form-label fw-bold"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Color" class="form-label fw-bold"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select">
                    <option value="">-- Select a Category --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="BrandId" class="form-label fw-bold">Brand</label>
                <select asp-for="BrandId" asp-items="ViewBag.Brands" class="form-select">
                    <option value="">-- Select a Brand --</option>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="ImageUrl" class="form-label fw-bold">Product Image</label>
                <input type="file" asp-for="ImageUrl" class="form-control" id="imageInput" />
            </div>
            <div class="mb-3 text-center">
                <img src="@Model?.ImageUrl ?? " /images/default.jpg"" class="img-thumbnail" style="max-width: 200px;" id="previewImage" />
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success px-4">Add Product</button>
                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('imageInput').addEventListener('change', function (event) {
        const file = event.target.files[0];
        if (file) {
            const reader = new FileReader();
            reader.onload = function (e) {
                document.getElementById("previewImage").src = e.target.result;
            };
            reader.readAsDataURL(file);
        }
    });
</script>
