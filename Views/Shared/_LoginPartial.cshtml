@using Microsoft.AspNetCore.Identity
@using _3.QKA_DACK.Models.Another
@using _3.QKA_DACK.Resources
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject LocalizationService LocService
<ul class="auth-menu">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="auth-item">
            <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                @LocService.GetLocalizedHtmlString("Hello") @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="auth-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit">@LocService.GetLocalizedHtmlString("Logout")</button>
            </form>
        </li>
    }
    else
    {
        <li class="auth-item">
            <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="auth-item">
            <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>